@model WebApplication6.Data.Entity.TestCase
@using WebApplication6.Data.Entity.Enum
@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<h2>Редагувати тест кейс</h2>

<div class="row">
    <div class="col-md-4">
        <form id="testcase-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequirmentId" class="control-label"></label>
                <select asp-for="RequirmentId" class="form-control" asp-items="ViewBag.RequirmentId"></select>
                <span asp-validation-for="RequirmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TestCaseType" class="control-label"></label>
                <select asp-for="TestCaseType" class="form-control" asp-items="@Html.GetEnumSelectList<TestCaseType>()"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <a class="close-newvalue">
            <i class="fa fa-times" aria-hidden="true"></i>
        </a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
