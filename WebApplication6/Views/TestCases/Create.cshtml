@model WebApplication6.Data.Entity.TestCase

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Введіть інформацію про тест-кейс</h4>

<div class="row">
    <div class="col-md-4">
        <form id="testcase-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="RequirmentId" class="control-label"></label>
                <input asp-for="RequirmentId" class="form-control" value="@ViewBag.RequirmentId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-default save-test"/>
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <a class="close-newvalue">
            <i class="fa fa-times" aria-hidden="true"></i>
        </a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
