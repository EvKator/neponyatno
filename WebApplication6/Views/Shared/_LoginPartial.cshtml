@using Microsoft.AspNetCore.Identity
@using WebApplication6.Data.Entity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" style="color:white;font-size:22px" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link" style="color:white;font-size:22px"><i class="fa fa-sign-out-alt"></i>&nbsp;&nbsp;Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="Identity" asp-page="/Account/Register" style="color:white;font-size:22px"><i class="fa fa-cash-register"></i>&nbsp;&nbsp;Sign up</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login" style="color:white;font-size:22px"><i class="fa fa-sign-in-alt"></i>&nbsp;&nbsp;Sign in</a></li>
    </ul>
}